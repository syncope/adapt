import argparse
try:
    from adapt import configParserFileAccess as cfgparser
    from  adapt import processListBuilder as processbuilder
    import adapt.serialExecutor as serialexecute
except ImportError("[adapt] library not found. Exiting!"):
    exit()

def serialExecution(filename):
    # create the objects
    iniparser = cfgparser.ConfigParserFileAccess()
    procbuilder = processbuilder.ProcessListBuilder()
    serexecutor = serialexecute.SerialExecutor()
    
    # parse the config file
    cfgObjDict = iniparser.read(filename)
    ordProcList = procbuilder.createProcessList(cfgObjDict)
    serexecutor.run(ordProcList)


if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("config_file", help="a configuration file that contains the process list and its parameters")
    args = parser.parse_args()
    serialExecution(args.config_file)
